includes:
  - vendor/szepeviktor/phpstan-wordpress/extension.neon
  - phpstan/services-boundaries.neon

parameters:
  level: 6
  treatPhpDocTypesAsCertain: false
  ignoreErrors:
    - identifier: missingType.iterableValue
    # DemoClient constructor has unused params for interface compatibility with OpenAIClientInterface.
    -
      identifier: constructor.unusedParameter
      path: src/Demo/DemoClient.php
  parallel:
    maximumNumberOfProcesses: 0
  scanFiles:
    - stubs/woocommerce.php
    - stubs/wp-cli.php
    - stubs/requests.php
    - stubs/agentwp-constants.php
  paths:
    - agentwp.php
    - src
    - uninstall.php
  excludePaths:
    - assets
    - docker
    - docs
    - languages
    - node_modules
    - react
    - tests
    - vendor
