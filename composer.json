{
  "name": "agentwp/agentwp",
  "description": "AgentWP WordPress plugin.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "autoload": {
    "psr-4": {
      "AgentWP\\": "src/"
    }
  },
  "require": {
    "php": ">=8.0",
    "yethee/tiktoken": "^0.1.2"
  },
  "require-dev": {
    "10up/wp_mock": "^1.0",
    "automattic/vipwpcs": "^3.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "mockery/mockery": "^1.6",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9.6",
    "squizlabs/php_codesniffer": "^3.9",
    "szepeviktor/phpstan-wordpress": "^1.3"
  },
  "autoload-dev": {
    "psr-4": {
      "AgentWP\\Tests\\": "tests/",
      "AgentWP\\PHPStan\\": "phpstan/"
    }
  },
  "scripts": {
    "phpunit": "vendor/bin/phpunit",
    "phpcs": "vendor/bin/phpcs",
    "phpstan": "php -d memory_limit=1G vendor/bin/phpstan analyse --no-progress",
    "openapi:validate": "php scripts/openapi-validate.php",
    "docs:check-links": "php scripts/check-doc-links.php"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
